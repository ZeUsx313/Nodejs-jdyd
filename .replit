language = "nodejs"
entrypoint = "backend/index.js"
modules = ["nodejs-20"]

# يخبر Replit بتشغيل هذا الأمر عند الضغط على زر Run
[run]
command = ["node", "backend/index.js"]

# هذا يمنع Replit من محاولة تشغيل الخادم بشكل آلي إضافي
[deployment]
run = ["node", "backend/index.js"]

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Start Server"

[[workflows.workflow]]
name = "Start Server"
author = 21142836
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm start"
